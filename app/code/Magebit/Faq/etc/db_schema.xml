<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="faq" resource="default" comment="FAQ - Frequently Asked Questions">
        <column xsi:type="int" name="id" identity="true" nullable="false" comment="Faq ID" />
        <column xsi:type="text" name="question" nullable="false" comment="Question" />
        <column xsi:type="text" name="answer" nullable="false" comment="Answer" />
        <column xsi:type="smallint" name="status" nullable="false" default="0" comment="Status" />
        <column xsi:type="int" name="position" nullable="false" default="0" comment="Position" />
        <column xsi:type="timestamp" name="updated_at" nullable="false"
                default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>
